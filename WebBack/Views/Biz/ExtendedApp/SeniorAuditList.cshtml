
@{
    ViewBag.Title = "SeniorAuditList";
    Layout = "~/Views/Shared/_LayoutHomeMainList.cshtml";
}

@section scripts{
    <script type="text/javascript">

        var listTable;

        $(document).ready(function () {
            listTable = $("#list_table").loadDataTable({
                url: "../ExtendedApp/GetSeniorAuditList",
                pageIndex: 0,
                searchParams: $("#form1").serializeArray(),
                searchButtonId: "btn_Search",
                containerId: "form1",
                rowDataCombie: function (p_index, p_row) {

                    var l_Strlimt = "";
                    l_Strlimt += "@Html.IsInPermission("<a href=\\\"javascript:void(0)\\\" class=\\\"a-btn a-btn-edit\\\" operate=\\\"audit\\\">审核</a>")";
                    var l_StrRows = "";
                    l_StrRows += "<tr>";
                    l_StrRows += "<td class=\"no\" >" + (p_index + 1) + "</td>";

                    var app = "<div> <img src=\"" + p_row.imgUrl + "\" style=\"width:50px;height:50px\"><div>";

                    l_StrRows += "<td class=\"overflow\" >" + app + "</td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.name + "\">" + p_row.name + "</td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.aduitType + "\">" + p_row.aduitType + "</td>";
                    l_StrRows += "<td class=\"overflow\" title=\"" + p_row.createTime + "\">" + p_row.createTime + "</td>";
                    l_StrRows += "<td class=\"operation\">";
                    l_StrRows += l_Strlimt;
                    l_StrRows += "</td>";
                    l_StrRows += "</tr>";
                    return l_StrRows;
                },
                refreshInterval: 0,
                success: function (data) {
                    $('#waitCount').text(data.status.waitCount);
                    $('#handleCount').text(data.status.handleCount);
                },
                operate: {
                    "audit": function (obj) {

                        function audit(obj) {
                            var url = '../ExtendedApp/SeniorAudit?id=' + obj.id + "&auditStatus=" + obj.auditStatus;
                            var title = '审核-' + obj.name + '应用';
                            var dialog = art.dialog.open(url, {
                                id: "openDialog2",
                                title: title,
                                width: '600px',
                                height: '420px',
                                lock: true,
                                drag: false,
                                cancelVal: '关闭',
                                cancel: true,
                                button: [{
                                    name: '通过',
                                    callback: function () {

                                        this.iframe.contentWindow.submit(operateType.pass, function (d) {
                                            if (d.result == resultType.success) {
                                                dialog.close();
                                                listTable.loadData();
                                            }
                                            $.lumos.tips(d.message);
                                        });
                                        return false;
                                    },
                                    focus: true
                                },{
                                    name: '拒绝',
                                    callback: function () {

                                        this.iframe.contentWindow.submit(operateType.refuse, function (d) {
                                            if (d.result == resultType.success) {
                                                dialog.close();
                                                listTable.loadData();
                                            }
                                            $.lumos.tips(d.message);
                                        });
                                        return false;
                                    }
                                },{
                                    name: '暂存',
                                    callback: function () {

                                        this.iframe.contentWindow.submit(operateType.save, function (d) {
                                            $.lumos.tips(d.message);
                                        });
                                        return false;
                                    }
                                }]
                            });
                        }

                        if (obj.AuditStatus == @((int)Lumos.Entity.Enumeration.ExtendedAppAuditStatus.WaitReview)) {
                            art.dialog.confirm('您确定要审核' + obj.name + '应用，确定后该应用由您来审核？', function () {

                                audit(obj)

                            });
                        }
                        else {
                            audit(obj);
                        }
                    }
                }
            });


        });

        function search(status) {
            $("#AuditStatus").val(status);
            listTable.loadData(0);
        }

    </script>
}

<form id="form1" name="form1">
    @Html.AntiForgeryToken()

    <input type="hidden" name="AuditStatus" id="AuditStatus" value="@((int)Lumos.Entity.Enumeration.ExtendedAppAuditStatus.WaitReview)" />
    <div class="search-bar status-bar">
        <div class="filter">
            <span onclick="search(@((int)Lumos.Entity.Enumeration.ExtendedAppAuditStatus.WaitReview))" class="status-bar-btn selected">待审核<span class="waitCount">(<span id="waitCount">0</span>)</span></span>
        </div>
        <div class="filter">
            <span onclick="search(@((int)Lumos.Entity.Enumeration.ExtendedAppAuditStatus.InReview))" class="status-bar-btn">审核中<span class="handleCount"> (<span id="handleCount">0</span>)</span></span>
        </div>
        <div class="clear"></div>
    </div>

    <div class="list">
        <table id="list_table" class="list-tb" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:5%" class="no">
                        序号
                    </th>
                    <th style="width:20%">
                        图标
                    </th>
                    <th style="width:20%">
                        名称
                    </th>
                    <th style="width:20%">
                        申请类型
                    </th>
                    <th style="width:15%">
                        申请时间
                    </th>
                    <th style="width:20%" class="operation">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <div class="pull-left">

                        </div>
                        <div class="pull-right pagination">
                            <div class="pagination-info">

                            </div>
                            <div class="pagination-index">

                            </div>
                            <div class="pagination-goto">

                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</form>

